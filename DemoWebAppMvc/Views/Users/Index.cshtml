@using DemoWebAppMvc.ViewModels;
@model List<UsersViewModel>
<<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">


            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="@item.ProfileImage" alt="Card image Cap" style="height: 229px; width: 412px">
                        <div class="card-body">
                            <p class="card-text">Username: @item.UserName</p>
                            <p class="card-text">Milage: @item.Milage</p>
                            <p class="card-text">Pace: @item.Pace</p>

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" asp-controller="Users" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a type="button" asp-controller="Race" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a type="button" asp-controller="Race" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    }
                                </div>
                                @*<small class="text-muted">@item.RaceCategory</small>*@
                            </div>
                        </div>
                    </div>
                </div>


            }

        </div>
    </div>
</div>